<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/confirmReg_marginBottom"
    android:background="@color/colorFragment"
    android:orientation="vertical"
    android:padding="@dimen/confirmReg_margin"
    tools:context=".ui.ConfirmRegistrationFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/confirmReg_margin"
        android:text="@string/confirmReg_text" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/confirmCode"
        android:layout_width="@dimen/confirmReg_inputWidth"
        android:layout_height="@dimen/confirmReg_codeWidth"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/confirmReg_margin"
        android:lineSpacingExtra="@dimen/auth_text_size"
        android:textColor="@color/colorAuthText"
        android:inputType="numberSigned"
        android:textSize="@dimen/auth_text_size" />

    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorConfirmBtn"
        android:layout_marginTop="@dimen/confirmReg_margin"
        android:text="@string/confirm" />

</LinearLayout>